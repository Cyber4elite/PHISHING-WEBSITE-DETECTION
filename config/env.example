# PhishShield Environment Configuration
# Copy this file to .env and update the values

# Django Settings
DEBUG=True
SECRET_KEY=your-secret-key-here-change-this-in-production
ALLOWED_HOSTS=localhost,127.0.0.1

# Database Configuration
# For SQLite (default)
DATABASE_URL=sqlite:///db.sqlite3

# For PostgreSQL (production)
# DATABASE_URL=postgresql://username:password@localhost:5432/phishshield

# For MySQL (production)
# DATABASE_URL=mysql://username:password@localhost:3306/phishshield

# Redis Configuration (for caching)
REDIS_URL=redis://127.0.0.1:6379/1

# Email Configuration (for production)
EMAIL_HOST=localhost
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=
DEFAULT_FROM_EMAIL=noreply@phishshield.com

# Security Settings
SECURE_SSL_REDIRECT=False
SECURE_HSTS_SECONDS=0
SECURE_HSTS_INCLUDE_SUBDOMAINS=False
SECURE_HSTS_PRELOAD=False

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/phishshield.log

# PhishShield Specific Settings
MAX_URL_LENGTH=500
CACHE_PREDICTIONS=True
CACHE_TIMEOUT=3600
RATE_LIMIT_PER_MINUTE=60
